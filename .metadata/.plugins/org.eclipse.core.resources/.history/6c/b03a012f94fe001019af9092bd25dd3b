package main;

import java.util.Scanner;

public class ConsoleBasedCalculator {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		boolean running = true;

		System.out.println("====== Cosnole Based Calculator ======");

		while (running) {
			System.out.println("Enter the first number: ");
			double num1 = sc.nextDouble();

			System.out.println("Enter operator (+, -, *, /): ");
			char operation = sc.next().charAt(0);

			System.out.println("Enter the second number: ");
			double num2 = sc.nextDouble();

			double result;
			boolean validOperation = true;

			switch (operation) {
			case '+':
				result = num1 + num2;
				break;

			case '-':
				result = num1 - num2;
				break;

			case '*':
				result = num1 * num2;
				break;

			case '/':
				if (num2 == 0) {
					System.out.println("‚ùå Error: Division by zero!");
					continue;
				} else {
					result = num1 / num2;
				}
				break;

			default:
				System.out.println("‚ùå Invalid operator!");
				validOperation = false;
				continue;
			}
			if (validOperation) {
				System.out.println("‚úÖ Result: " + result);
			}
			System.out.print("Do you want to calculate again? (yes/no): ");
			String choice = scanner.next();

			if (!choice.equalsIgnoreCase("yes")) {
				running = false;
			}
		}

		System.out.println("Calculator closed. Bye üëã");
		scanner.close();
	}
}
