package main;
import java.text.DecimalFormat;
import java.util.Scanner;

public class ConsoleBasedCalculator {

	private static final DecimalFormat DF = new DecimalFormat("#.##########");
	
	public static void main(String[] args) {
		
		
		try(Scanner sc = new Scanner(System.in)){
			
			System.out.println("====== Console Based Calculator ======");
            System.out.println("Type 'exit' anytime to quit.\n");
            
            while (true) {
    			double num1 = readDouble(sc, "Enter the first number: ");
    			if(num1 == null) break;
    			
    			Character op = readOperator(sc, "Enter operator (+, -, *, /): ");
    			if(op == null) break;
    			
    			double num2 = readDouble(sc, "Enter the second number: ");
    			if(num2 == null) break;
    			
    			
		}
	
		
			System.out.println("Enter operator (+, -, *, /): ");
			char operation = sc.next().charAt(0);

			System.out.println("Enter the second number: ");
			double num2 = sc.nextDouble();

			double result;
			boolean validOperation = true;

			switch (operation) {
			case '+':
				result = num1 + num2;
				break;

			case '-':
				result = num1 - num2;
				break;

			case '*':
				result = num1 * num2;
				break;

			case '/':
				if (num2 == 0) {
					System.out.println("‚ùå Error: Division by zero!");
					continue;
				} else {
					result = num1 / num2;
				}
				break;

			default:
				System.out.println("‚ùå Invalid operator!");
				validOperation = false;
				continue;
			}
			if (validOperation) {
				System.out.println("‚úÖ Result: " + result);
			}
			System.out.print("Do you want to calculate again? (yes/no): ");
			String choice = sc.next();

			if (!choice.equalsIgnoreCase("yes")) {
				running = false;
			}
		}

		System.out.println("Calculator closed. Bye üëã");
		sc.close();

			}
}
